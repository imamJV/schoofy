<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Guru.Home.Home_guru">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">
        <Button
            android:id="@+id/walikelas"
            android:background="@drawable/btn_rounded_kanan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Wali Kelas"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/gurumapel"
            android:background="@drawable/btn_rounded_kiri"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Guru Mapel"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>